<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New user</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <header>
        <a href="/">Головна</a>
        <a href="/profile">Профіль</a>
        <a href="/logout">Вийти</a>
    </header>
    <h1>Новий користувач</h1>
    <form action="/addUser" method="post">
        <div>
            <label for="username">Логін:</label>
            <input type="text" id="username" name="username" required>
        </div>
        <div>
            <label for="password">Пароль:</label>
            <input type="password" id="password" name="password" required>
        </div>
        <div>
            <label for="name">Ім'я:</label>
            <input type="text" id="name" name="name" required>
        </div>
        <div>
            <label for="surname">Прізвище:</label>
            <input type="text" id="surname" name="surname" required>
        </div>
        <div>
            <label for="group">Група:</label>
            <input type="text" id="group" name="group" required>
        </div>
        <div>
            <label for="additionalMarks">Додаткові бали:</label>
            <input type="number" id="additionalMarks" name="additionalMarks" required>
        </div>
        <table id="subjects-table">
            <thead>
                <tr>
                    <th>Предмет</th>
                    <th>Викладач</th>
                    <th>Оцінка</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><input type="text" name="subjects[0][subject]" required></td>
                    <td><input type="text" name="subjects[0][teacher]" required></td>
                    <td><input type="number" name="subjects[0][mark]" ></td>
                    <td><button type="button" onclick="removeSubject(this)">Видалити</button></td>
                </tr>
            </tbody>
        </table>
        <button type="button" onclick="addSubject()">Додати предмет</button>
        <div>
            <button type="submit">Додати користувача</button>
        </div>
    </form>

    <script>
        function addSubject() {
            const table = document.getElementById('subjects-table').getElementsByTagName('tbody')[0];
            const index = table.children.length;
            const row = table.insertRow();
            row.innerHTML = `
                <td><input type="text" name="subjects[${index}][subject]" required></td>
                <td><input type="text" name="subjects[${index}][teacher]" required></td>
                <td><input type="number" name="subjects[${index}][mark]" ></td>
                <td><button type="button" onclick="removeSubject(this)">Remove</button></td>
            `;
        }

        function removeSubject(button) {
            const row = button.parentElement.parentElement;
            row.parentElement.removeChild(row);
        }
    </script>
</body>
</html>



